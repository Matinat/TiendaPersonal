<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/grayrounded"
        app:layout_constraintBottom_toBottomOf="@id/productImg"
        app:layout_constraintEnd_toEndOf="@id/productImg"
        app:layout_constraintStart_toStartOf="@id/productImg"
        app:layout_constraintTop_toTopOf="@id/productImg" />

    <ImageView
        android:id="@+id/productImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:alpha="0.8"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/productTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Motorola Moto Edge 20 Pro - Azul + HDMI"
        android:layout_marginStart="@dimen/margin_card"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        android:maxLines="2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/productImg"
        app:layout_constraintTop_toTopOf="@id/productImg" />

    <TextView
        android:id="@+id/topTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_card"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:text="20% OFF Conexión Total"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/productImg"
        app:layout_constraintTop_toBottomOf="@id/productTitle" />

    <TextView
        android:id="@+id/installmentsTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_card"
        android:layout_marginTop="3dp"
        tools:text="Hasta 6 cuotas sin interés"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/productImg"
        app:layout_constraintTop_toBottomOf="@id/topTag" />
</androidx.constraintlayout.widget.ConstraintLayout>